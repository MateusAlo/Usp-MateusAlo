

#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int teste_juntar(int l1, int l2, char *str1, char *str2)
{
    
    int teste = 0;
    str1 = (char*)malloc(sizeof(char)*l1);
    str2 = (char*)malloc(sizeof(char)*l2);



    for (int i = 0; i < l1; i++)
    {
        for (int j = 0; j < l2; j++)
        {
            if ((str1[i] == str2[j]) && (str1[i]!= '\0'))
            {
                teste = 1;
                break;
            }
        }
    }
    return teste;
}
int main (void)
{
    int teste;
    char *string1;
    string1 = (char*)malloc(40*sizeof(char));
    char *string2;
    string2 = (char*)malloc(40*sizeof(char));
    printf("insira uma palavra: \n");
    //scanf("%[^\n]s", string1);
    gets(string1);
    printf("a palavra escolida foi %s \n", string1);
    printf("insira outra palavra: \n");
    //scanf("%[^\n]s", string2);
    gets(string2);
    printf("a palavra escolida foi %s \n", string2);
    getchar();
    int d1 = strlen(string1);
    int d2 = strlen(string2);
    teste = teste_juntar(d1, d2, string1, string2);
    printf("%d", teste);
return 0;
}
