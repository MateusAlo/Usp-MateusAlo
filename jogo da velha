#include <stdio.h>
#include <math.h>
#include <time.h>
#include <limits.h>
#define TAM 3


int main()

{
    int i, j, n, l, c, caracter=0, valido;
    char jogo[TAM][TAM];
    char jogador1, jogador2, winner;



    while (caracter == 0 )//caracter é um marcador para checar se a escolha entre X e O é valida,
    {

        printf("\nBem vindo(s) ao jogo da velha, jogador 1 escolha dentre 'X' ou 'O': ");
        jogador1 = getch();
        if (jogador1 == 'X')
        {
            jogador2 = 'O';
            caracter = 1;
            printf("\nEscolheu bem");
            break;


        }
        if (jogador1 == 'O')
        {
            jogador2 == 'X';
            caracter = 1;
            printf("\nEscolheu bem\n");
            break;

        }
        else
        {
            printf("\nEscolha de caracter invalida, escolha novamente");
            caracter =  0;
        }


    }
    printf("\n");
    for (i=0; i < TAM; i++)
    {
        for (j=0; j < TAM; j++)
        {
            jogo[i][j]= '-';
            printf("%c", jogo[i][j]);

        }
        printf("\n");

    }
    for (n = 0; n < 9; n++)
    {
        printf("\nEscreva a posicao da jogada (1-3): ");
        scanf("%d %d", &l, &c );
        while (jogo[l-1][c-1] != '-'){
            printf("\nEscreva outra posicao (nao ocupada)");
            scanf("%d %d", &l, &c );
        }
    {

        if ((n%2 == 0) && (jogo[l-1][c-1] == '-'))
            {
                for (i=0; i < TAM; i++)
                {
                    for  (j=0; j < TAM; j++)
                    {

                        jogo[l-1][c-1] = 'X';
                        printf("%c", jogo[i][j]);


                    }
                    printf("\n");

                }
            }
            else
            {

                for (i=0; i < TAM; i++)
                {
                    for  (j=0; j < TAM; j++)
                    {

                        jogo[l-1][c-1] = 'O';
                        printf("%c ", jogo[i][j]);

                    }
                    printf("\n");

                }

            }

        }

    }
    printf("O jogo acabou o vencedor é: %c ", winner)




    return 0;
}
