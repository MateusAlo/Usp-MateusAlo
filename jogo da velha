#include <stdio.h>
#include <math.h>
#include <time.h>
#include <limits.h>
#define TAM 3


int main()

{
    int i, j, n, l, c;
    char jogo[TAM][TAM];

    printf("O primeiro jogador eh X e o segundo O\n");


    for (i=0; i < TAM; i++)
    {
        for (j=0; j < TAM; j++)
        {
            jogo[i][j]= '-';
            printf("%c", jogo[i][j]);

        }
        printf("\n");

    }
    for (n = 0; n < 9; n++)
    {
        if (n%2 == 0)
        {
            jogo[l-1][c-1] = 'X';
            printf("%c ", jogo[i][j]);
            for (i=0; i < TAM; i++)
            {
                for  (j=0; j < TAM; j++)
                {
                    printf("Escreva a posição da jogada (1-3): ");
                    scanf("%d %d", &l, &c );

                    {

                    }
                }
                printf("\n");

            }
        }
        else
        {

            jogo[i-1][j-1] = 'O';
            printf("%c ", jogo[i][j]);
            for (i=0; i < TAM; i++)
            {
                for  (j=0; j < TAM; j++)
                {
                    printf("Escreva a posição da jogada (1-3): ");
                    scanf("%d %d", &l, &c );

                    {

                    }
                }
                printf("\n");

            }
        }




            return 0;
        }
