#include <stdio.h>
#include <math.h>


int main()
{


    char ch;
    printf("\nDigite um caracter (digite s para sair): ");
    ch=getchar();


        while (ch!= 's')
        {

        printf("\nO caracter digitado eh %c", ch);
        printf("\n Digite outro caracter (digite s para sair): ");
        ch=getchar();

        }
        printf("\nSaindo do loop\n");

        return 0;
}
